#!/bin/bash
function validTable (){
if [[ -f ./$1  ]]
then
	echo "THERE IS A Table WITH THE SAME NAME "
	return 0;
fi
for i in $1 ;
do
	if [[ $i =~ [^a-zA-Z] ]]		
	then
		echo "HAVE UNVALID CHARACTER >> IT MUST BE ALPHABETICS"
		return 0;
	fi
done
return 1;
} 
function validNumber(){
echo "Enter The Number Of Columns"
 while true
      do
          
            read c
            validNum=1;
            for i in $c;
            do
                  if [[ $i =~ [^0-9] ]]
                  then
                        validNum=0
                        echo "Please Enter a Number"
                  fi
            done
            if [ $validNum -eq 1 ]
            then
                  echo "table created successfully"
                  break
            fi
      done
}
function CreateTable(){

while true
do
      echo "Enter Table name "
      read table
      validTable $table
      if [ $? -eq 1 ]
      then
            touch ./$table
            validNumber 
            break;
      fi
   

done
}


function ListTables(){
echo "Your Tables are:"
ls 
}


function DropTable(){
echo "Enter Table name "
read table
if [[ -f ./$table ]]; then
    rm $table
    echo " Table $table Removed"
else 
    echo "invalid Table"
fi
}


